<div class="container mt-4">
  <div class="row justify-content-center">
    <h1>MOTD Times</h1>
  </div>
  <div class="row justify-content-center">
    <div class="form-group">
      <%= select_tag :time_zone, options: ActiveSupport::TimeZone.all.sort, class: 'form-control', id: 'time_zones', selected: @timezone %>
    </div>
  </div>
  <div class="row justify-content-center">
    <h4>Upcoming</h4>
  </div>
  <div class="row justify-content-center">
    <ol>
      <% @future.sort.each do |date| %>
        <li><%= date.in_time_zone(@timezone).strftime('%A, %b %e, %l:%M %p') %></li>
      <% end %>
    </ol>
  </div>
  <div class="row justify-content-center">
    <h4>Past</h4>
  </div>
  <div class="row justify-content-center">
    <ol>
      <% @past.sort.reverse.each do |date| %>
        <li><%= date.in_time_zone(@timezone).strftime('%A, %b %d') %></li>
      <% end %>
    </ol>
  </div>
</div>